  <div class="col-md-5 pb-4 col-sm-10 col-12">
    <span
      class="badge bg-success bg-opacity-25 d-block text-center mb-2 text-muted rounded"
      >User Log in</span
    >
    <span class="fw-bold text-success" id="id_msg"> <%=msg%> </span>
    <form action="/auth/signin" method="POST" id="id_signin_form">
      <div class="form-group my-3">
        <label for="idemail" class="float-start">Email</label>
        <input
          type="email"
          name="username"
          required
          id="idemail"
          class="form-control text-center"
          placeholder=" Enter email "
          value="<%=typeof email!='undefined' ? email : ''%>"
        />
      </div>
      <div class="form-group mb-2">
        <label for=" password " class="float-start">Password</label>
        <input
          type=" password "
          name="password"
          id="idpass"
          required
          class="form-control text-center"
          placeholder=" Password ? "
          value="<%=typeof password !='undefined' ? password : ''%>"
        />
      </div>
      <div class="d-flex justify-content-end">
        <button
          type="submit"
          class="btn btn-sm fw-bold bg-success bg-opacity-50 mt-2 rounded w-50"
        >
          Login
        </button>
      </div>
